doctype html
html
    head
        meta(charset='utf-8')
        meta(http-equiv='X-UA-Compatible', content='IE=edge')
        meta(name='viewport', content='width=device-width, initial-scale=1.0')


        title #{title}
        include templates/styles


    body
        .container-fluid
            include templates/menu


        main



            .container-fluid.my-1

                if menu
                    each item in menu
                        .text-center.py-1.mx-1
                            button(id=item.id, class='btn btn-md btn-dark button-radius w-100 my-2')
                                i.mx-2(class=item.icon)
                                | #{item.text}

        //.container-fluid.my-1.text-center
            .row
                .col-12.col-md-4.py-2
                    .card.gradient-card
                        .card-header.text-center.bg-transparent.border-0
                            i.fas.fa-chart-bar.icon
                            h5.card-title Más Vendidos
                        .card-body
                            p.card-text Contenido de la sección de Más Vendidos

                .col-12.col-md-4.py-2
                    .card.gradient-card
                        .card-header.text-center.bg-transparent.border-0
                            i.fas.fa-users.icon
                            h5.card-title Usuarios Top
                        .card-body
                            p.card-text Contenido de la sección de Usuarios Top

                .col-12.col-md-4.py-2
                    .card.gradient-card
                        .card-header.text-center.bg-transparent.border-0
                            i.fas.fa-shopping-cart.icon
                            h5.card-title Últimas Ventas
                        .card-body
                            p.card-text Contenido de la sección de Últimas Ventas




        include templates/footer



        include templates/scripts

        script(src=url_js_files + '/common.js?v=' + Math.random())
