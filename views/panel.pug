doctype html
html
    head
        meta(charset='utf-8')
        meta(http-equiv='X-UA-Compatible', content='IE=edge')
        meta(name='viewport', content='width=device-width, initial-scale=1.0')


        title #{title}
        include templates/styles

    body
        include templates/menu


        .container-fluid.my-1
            .row
                .col-12.col-md-1
                .col-12.col-md-10


                    .text-center.py-4
                        // button#loginBtn(type="subimt" ).btn.btn-block.btn-danger.button-radius.w-100.my-2 Acceder
                        a(href="/newSale")#newSale.btn.btn-block.btn-dark.button-radius.w-100.my-2
                            i.mx-2.fa-solid.fa-store
                            | Nueva venta
                .col-12.col-md-1
        .container-fluid.my-1.text-center
            .row
                .col-12.col-md-4.py-2
                    .card.gradient-card
                        .card-header.text-center.bg-transparent.border-0
                            i.fas.fa-chart-bar.icon
                            h5.card-title Más Vendidos
                        .card-body
                            p.card-text Contenido de la sección de Más Vendidos

                .col-12.col-md-4.py-2
                    .card.gradient-card
                        .card-header.text-center.bg-transparent.border-0
                            i.fas.fa-users.icon
                            h5.card-title Usuarios Top
                        .card-body
                            p.card-text Contenido de la sección de Usuarios Top

                .col-12.col-md-4.py-2
                    .card.gradient-card
                        .card-header.text-center.bg-transparent.border-0
                            i.fas.fa-shopping-cart.icon
                            h5.card-title Últimas Ventas
                        .card-body
                            p.card-text Contenido de la sección de Últimas Ventas








