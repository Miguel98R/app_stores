doctype html
html
    head
        meta(charset='utf-8')
        meta(http-equiv='X-UA-Compatible', content='IE=edge')
        meta(name='viewport', content='width=device-width, initial-scale=1.0')
        title #{title}
        include templates/styles

    body
        include templates/menu

        .container-fluid.my-1
            .row
                .col-12.col-md-4
                    .card.product-card
                        img.card-img-top(src='/public/img/product.jpg', alt='Jitomate')
                        .card-body
                            h5.card-title Jitomate
                            p.card-text Precio: $X.XX
                            .input-group.mb-3
                                button.btn.btn-outline-dark(type='button') -
                                input.form-control(type='text', placeholder='Cantidad', value='0')
                                button.btn.btn-outline-dark(type='button') +



        .container-fluid.my-1
            .row
                .col-12.text-center.py-4
                    a(href="/payout").btn.btn-block.btn-dark.button-radius.w-100.my-2 Proceder al pago

        include templates/footer
        include templates/scripts
        script(src=url_js_files + '/common.js?v=' + Math.random())
