                            div.py-3
                                img(src="./public/img/logo_.png" style="max-height:200px;").img-fluid


                            div.my-2
                                .display-2.fw-bold Iniciar sesión

                        .card-body.m-0.p-0
                            //form#loginForm(role='form' action="api/users/loginPanel" method="POST")


                            .form-group.my-4
